<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/icon_layout"
    android:layout_width="@dimen/picker_app_list_icon_frame_width"
    android:layout_height="fill_parent"
    android:importantForAccessibility="no">

    <ImageView
        android:id="@id/icon"
        android:layout_width="@dimen/picker_app_list_icon_frame_icon_size"
        android:layout_height="@dimen/picker_app_list_icon_frame_icon_size"
        android:layout_gravity="start|center"
        android:scaleType="centerCrop"
        android:contentDescription="@null"
        android:importantForAccessibility="no"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:layout_width="0.0dip"
        android:layout_height="0.0dip"
        app:layout_constraintBottom_toBottomOf="@id/icon"
        app:layout_constraintEnd_toEndOf="@id/icon"
        app:layout_constraintStart_toStartOf="@id/icon"
        app:layout_constraintTop_toTopOf="@id/icon"
        layout="@layout/picker_app_item_skeleton_app_icon" />

    <ImageView
        android:id="@id/sub_icon"
        android:layout_width="@dimen/picker_app_list_sub_icon_frame_icon_size"
        android:layout_height="@dimen/picker_app_list_sub_icon_frame_icon_size"
        android:layout_gravity="start|center"
        android:layout_marginLeft="@dimen/picker_app_list_sub_icon_frame_icon_margin_left"
        android:layout_marginTop="@dimen/picker_app_list_sub_icon_frame_icon_margin_top"
        android:scaleType="centerCrop"
        android:contentDescription="@null"
        android:importantForAccessibility="no"
        app:layout_constraintBottom_toBottomOf="@id/icon"
        app:layout_constraintEnd_toEndOf="@id/icon" />

</androidx.constraintlayout.widget.ConstraintLayout>
