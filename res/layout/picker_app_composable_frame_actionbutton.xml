<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:orientation="horizontal">

    <View
        android:id="@id/switch_divider_widget"
        android:layout_width="@dimen/picker_app_list_actionbutton_divider_width"
        android:layout_height="@dimen/picker_app_list_actionbutton_divider_height"
        android:layout_gravity="center_vertical"
        android:background="?listDividerColor"
        android:visibility="gone" />

    <ImageButton
        android:id="@id/image_button"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:src="@drawable/picker_app_ic_applist_setting_mtrl"
        android:maxWidth="@dimen/picker_app_list_icon_frame_icon_size"
        android:maxHeight="@dimen/picker_app_list_icon_frame_icon_size"
        style="?android:actionModeCloseButtonStyle" />

</LinearLayout>
