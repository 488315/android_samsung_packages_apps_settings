<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layoutDirection="ltr">

    <ImageView
        android:id="@id/indicator_left"
        android:layout_width="@dimen/samsung_navigationbar_back_gesture_indicator_width"
        android:layout_height="fill_parent"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@id/indicator_right"
        android:layout_width="@dimen/samsung_navigationbar_back_gesture_indicator_width"
        android:layout_height="fill_parent"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:id="@id/indicator_bottom"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/samsung_navigationbar_back_gesture_indicator_width"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
