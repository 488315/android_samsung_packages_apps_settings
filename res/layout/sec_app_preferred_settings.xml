<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:minHeight="56.0dip"
    android:paddingStart="?android:listPreferredItemPaddingStart"
    android:paddingEnd="?android:listPreferredItemPaddingEnd">

    <TextView
        android:id="@id/auto_launch"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:textAppearance="?android:textAppearanceListItem"
        android:paddingTop="@dimen/sec_widget_body_text_padding_top"
        android:paddingBottom="@dimen/sec_widget_body_text_padding_top"
        android:text="@string/clear_activities"
        android:layout_toStartOf="@id/clear_activities_button"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@id/clear_activities_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/clear_activities_button_text"
        android:layout_centerVertical="true"
        android:paddingStart="@dimen/sec_button_minimum_side_padding"
        android:paddingEnd="@dimen/sec_button_minimum_side_padding"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
