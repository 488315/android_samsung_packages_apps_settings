<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:clickable="true">

    <ImageView
        android:id="@id/image"
        android:layout_width="@dimen/sec_suw_radio_item_image_width"
        android:layout_height="@dimen/sec_suw_radio_item_image_height"
        android:focusable="false"
        android:clickable="false"
        android:layout_marginTop="@dimen/sec_suw_radio_item_margin_top"
        android:layout_marginBottom="@dimen/sec_suw_radio_item_margin_bottom"
        app:layout_constraintBottom_toTopOf="@id/title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sec_suw_radio_item_title_text_size"
        android:textColor="@color/sec_suw_radio_item_text_color"
        android:gravity="center"
        android:focusable="false"
        android:layout_marginBottom="@dimen/sec_suw_radio_item_margin_top"
        android:minHeight="@dimen/sec_suw_radio_item_title_height"
        android:fontFamily="sec"
        android:textFontWeight="600"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/image"
        app:layout_constraintStart_toStartOf="@id/image"
        app:layout_constraintTop_toBottomOf="@id/image" />

</androidx.constraintlayout.widget.ConstraintLayout>
