<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="?android:listChoiceBackgroundIndicator"
    android:minHeight="@dimen/picker_app_list_single_line_height">

    <ViewStub
        android:id="@id/left_frame"
        android:layout_width="@dimen/picker_app_list_left_frame_width"
        android:layout_height="fill_parent"
        android:gravity="start|center"
        android:orientation="horizontal"
        android:inflatedId="@id/left_frame"
        android:importantForAccessibility="no" />

    <ViewStub
        android:id="@id/icon_frame"
        android:layout_width="@dimen/picker_app_list_icon_frame_width"
        android:layout_height="fill_parent"
        android:inflatedId="@id/icon_frame"
        android:importantForAccessibility="no" />

    <ViewStub
        android:id="@id/title_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:paddingTop="@dimen/picker_app_list_padding_top"
        android:paddingBottom="@dimen/picker_app_list_padding_bottom"
        android:inflatedId="@id/title_frame"
        android:layout_weight="1.0" />

    <ViewStub
        android:id="@id/widget_frame"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:inflatedId="@id/widget_frame" />

</LinearLayout>
