<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/diagnostics_info_body"
    android:layout_width="fill_parent"
    android:layout_height="0.0dip"
    android:paddingTop="@dimen/sec_widget_alert_dialog_padding_top"
    android:layout_weight="1.0">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/sec_widget_alert_dialog_padding_start_end"
        android:paddingEnd="@dimen/sec_widget_alert_dialog_padding_start_end">

        <TextView
            android:id="@id/diagnostics_info_message"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/sec_widget_alert_dialog_padding_bottom"
            android:text="@string/label_diagnostics_info_text_dream_phone"
            style="@style/description_text" />

        <LinearLayout
            android:id="@id/global_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@id/learn_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/sec_tw_common_list_item_background"
                android:focusable="true"
                android:clickable="true"
                android:layout_marginBottom="@dimen/sec_widget_body_text_padding_bottom">

                <TextView
                    android:id="@id/learn_more_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.SudDescription.Secondary"
                    android:textColor="@color/weblink_color"
                    android:text="@string/diagnostic_data"
                    android:fontFamily="sec"
                    android:textFontWeight="400" />

            </LinearLayout>

            <CheckedTextView
                android:id="@id/agree_btn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/sec_widget_body_text_padding_bottom"
                android:text="@string/diagnostic_data_agreed"
                style="@style/SecDiagnosticCheckedTextViewStyle" />

            <CheckedTextView
                android:id="@id/other_info_agree_Btn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/sec_widget_body_text_padding_bottom"
                android:text="@string/diagnostic_other_info_agreed"
                style="@style/SecDiagnosticCheckedTextViewStyle" />

            <LinearLayout
                android:id="@id/learn_more_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/sec_tw_common_list_item_background"
                android:focusable="true"
                android:clickable="true"
                android:layout_marginBottom="@dimen/sec_widget_body_text_padding_bottom"
                android:layout_marginStart="@dimen/sec_locale_label_start_padding">

                <TextView
                    android:id="@id/learn_more_2_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.SudDescription.Secondary"
                    android:textColor="@color/weblink_color"
                    android:text="@string/diagnostic_other_info_linked"
                    android:fontFamily="sec"
                    android:textFontWeight="400" />

            </LinearLayout>

        </LinearLayout>

        <include
            layout="@layout/sec_report_diagnostic_info_chn" />

    </LinearLayout>

</ScrollView>
