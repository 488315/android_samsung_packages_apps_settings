            </LinearLayout>
            <LinearLayout android:gravity="center" android:id="@id/empty_text" android:layout_width="@dimen/privacy_dashboard_app_icon_size" android:layout_height="@dimen/privacy_dashboard_app_icon_size">
                <TextView android:textSize="@dimen/privacy_dashboard_empty_text_size" android:textColor="@color/privacy_empry_text_color" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="-" android:importantForAccessibility="no" android:fontFamily="sec" android:textAlignment="center" android:textFontWeight="400" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
