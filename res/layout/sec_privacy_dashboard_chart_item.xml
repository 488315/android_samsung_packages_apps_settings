    <LinearLayout android:gravity="center" android:layout_gravity="center_horizontal" android:id="@id/icon_areas" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <LinearLayout android:gravity="center" android:id="@id/fourth_icon_area" android:background="@drawable/ic_icon_bg_outline" android:layout_width="@dimen/privacy_dashboard_permission_icon_size" android:layout_height="@dimen/privacy_dashboard_permission_icon_size" android:layout_marginEnd="@dimen/privacy_dashboard_outline_margin">
