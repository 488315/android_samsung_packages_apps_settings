<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@id/icon_areas"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:id="@id/fourth_icon_area"
            android:layout_width="@dimen/privacy_dashboard_permission_icon_size"
            android:layout_height="@dimen/privacy_dashboard_permission_icon_size"
            android:gravity="center"
            android:background="@drawable/ic_icon_bg_outline"
            android:layout_marginEnd="@dimen/privacy_dashboard_outline_margin">

            <ImageView
                android:id="@id/fourth_app_icon"
                android:layout_width="@dimen/privacy_dashboard_app_icon_size"
                android:layout_height="@dimen/privacy_dashboard_app_icon_size"
                android:background="@color/content_background" />

        </LinearLayout>

        <LinearLayout
            android:id="@id/third_icon_area"
            android:layout_width="@dimen/privacy_dashboard_permission_icon_size"
            android:layout_height="@dimen/privacy_dashboard_permission_icon_size"
            android:gravity="center"
            android:background="@drawable/ic_icon_bg_outline"
            android:layout_marginEnd="@dimen/privacy_dashboard_outline_margin">

            <ImageView
                android:id="@id/third_app_icon"
                android:layout_width="@dimen/privacy_dashboard_app_icon_size"
                android:layout_height="@dimen/privacy_dashboard_app_icon_size"
                android:background="@color/content_background" />

        </LinearLayout>

        <LinearLayout
            android:id="@id/second_icon_area"
            android:layout_width="@dimen/privacy_dashboard_permission_icon_size"
            android:layout_height="@dimen/privacy_dashboard_permission_icon_size"
            android:gravity="center"
            android:background="@drawable/ic_icon_bg_outline"
            android:layout_marginEnd="@dimen/privacy_dashboard_outline_margin">

            <ImageView
                android:id="@id/second_app_icon"
                android:layout_width="@dimen/privacy_dashboard_app_icon_size"
                android:layout_height="@dimen/privacy_dashboard_app_icon_size"
                android:background="@color/content_background" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/privacy_dashboard_permission_icon_size"
            android:layout_height="@dimen/privacy_dashboard_permission_icon_size"
            android:gravity="center"
            android:background="@drawable/ic_icon_bg_outline">

            <ImageView
                android:id="@id/first_app_icon"
                android:layout_width="@dimen/privacy_dashboard_app_icon_size"
                android:layout_height="@dimen/privacy_dashboard_app_icon_size"
                android:background="@color/content_background" />

            <LinearLayout
                android:id="@id/number_area"
                android:layout_width="@dimen/privacy_dashboard_app_icon_size"
                android:layout_height="@dimen/privacy_dashboard_app_icon_size"
                android:gravity="center"
                android:background="@drawable/ic_number_bg">

                <TextView
                    android:id="@id/app_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/privacy_dashboard_number_text_size"
                    android:textColor="@color/privacy_more_text_color"
                    android:fontFamily="sec"
                    android:textAlignment="center"
                    android:textFontWeight="500" />

            </LinearLayout>

            <LinearLayout
                android:id="@id/empty_text"
                android:layout_width="@dimen/privacy_dashboard_app_icon_size"
                android:layout_height="@dimen/privacy_dashboard_app_icon_size"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/privacy_dashboard_empty_text_size"
                    android:textColor="@color/privacy_empry_text_color"
                    android:text="-"
                    android:importantForAccessibility="no"
                    android:fontFamily="sec"
                    android:textAlignment="center"
                    android:textFontWeight="400" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
