        </LinearLayout>
        <LinearLayout android:gravity="center" android:id="@id/third_icon_area" android:background="@drawable/ic_icon_bg_outline" android:layout_width="@dimen/privacy_dashboard_permission_icon_size" android:layout_height="@dimen/privacy_dashboard_permission_icon_size" android:layout_marginEnd="@dimen/privacy_dashboard_outline_margin">
            <ImageView android:id="@id/third_app_icon" android:background="@color/content_background" android:layout_width="@dimen/privacy_dashboard_app_icon_size" android:layout_height="@dimen/privacy_dashboard_app_icon_size" />
        </LinearLayout>
        <LinearLayout android:gravity="center" android:id="@id/second_icon_area" android:background="@drawable/ic_icon_bg_outline" android:layout_width="@dimen/privacy_dashboard_permission_icon_size" android:layout_height="@dimen/privacy_dashboard_permission_icon_size" android:layout_marginEnd="@dimen/privacy_dashboard_outline_margin">
            <ImageView android:id="@id/second_app_icon" android:background="@color/content_background" android:layout_width="@dimen/privacy_dashboard_app_icon_size" android:layout_height="@dimen/privacy_dashboard_app_icon_size" />
        </LinearLayout>
        <LinearLayout android:gravity="center" android:background="@drawable/ic_icon_bg_outline" android:layout_width="@dimen/privacy_dashboard_permission_icon_size" android:layout_height="@dimen/privacy_dashboard_permission_icon_size">
            <ImageView android:id="@id/first_app_icon" android:background="@color/content_background" android:layout_width="@dimen/privacy_dashboard_app_icon_size" android:layout_height="@dimen/privacy_dashboard_app_icon_size" />
