<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingTop="@dimen/single_choice_top_padding"
    android:paddingBottom="@dimen/single_choice_gridView_bottom_padding">

    <ImageView
        android:id="@id/item_guide_image"
        android:layout_width="80.0dip"
        android:layout_height="80.0dip" />

    <com.samsung.android.settings.accessibility.base.widget.LimitedScaleTextView
        android:id="@id/item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12.0sp"
        android:textColor="@color/a11y_visibility_single_choice_item_title_color"
        android:layout_marginTop="10.0dip"
        android:importantForAccessibility="no"
        android:textAlignment="center"
        settings:limitedScale="5" />

</LinearLayout>
