<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@id/help_vi_container"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@id/task_bar_help_vi"
            android:layout_width="@dimen/task_bar_help_vi_width"
            android:layout_height="@dimen/task_bar_help_vi_height"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/task_bar_help_vi_top_margin"
            android:layout_marginBottom="@dimen/task_bar_help_vi_top_margin"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/sec_taskbar_tips_fold_light" />

    </LinearLayout>

    <LinearLayout
        android:id="@id/help_instruction_container"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:background="@color/sec_widget_round_and_bgcolor">

        <TextView
            android:id="@id/help_instruction_summary"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:layout_marginTop="@dimen/sec_widget_preference_unclickable_margin_top"
            android:layout_marginBottom="6.0dip"
            android:text="@string/taskbar_summary"
            android:layout_marginStart="@dimen/sec_widget_body_text_padding_start_end"
            android:layout_marginEnd="@dimen/sec_widget_body_text_padding_start_end"
            style="@style/body_text_style" />

    </LinearLayout>

</LinearLayout>
