<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300.0sp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@id/wifi_ap_tmo_first_time_popup"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:textAppearanceListItem"
            android:textSize="@dimen/tethering_dialog_description_text_size"
            android:textColor="@color/sec_widget_alert_dialog_text_color"
            android:layout_marginTop="@dimen/sec_alert_dialog_padding_top"
            android:fontFamily="sec-roboto-light"
            android:layout_marginStart="@dimen/sec_alert_dialog_padding_left_right"
            android:layout_marginEnd="@dimen/sec_alert_dialog_padding_left_right" />

        <LinearLayout
            android:id="@id/wifi_ap_do_not_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:focusable="true"
            android:clickable="true"
            android:layout_marginTop="@dimen/wifi_ap_alert_dialog_bottom_checkbox_margin_top"
            android:layout_marginBottom="@dimen/sec_alert_dialog_padding_bottom"
            android:layout_marginStart="@dimen/sec_alert_dialog_bottom_checkbox_margin_left"
            style="@style/wifi_ap_dialog_checkbox_layout_style">

            <CheckBox
                android:id="@id/wifi_ap_do_not_show_again"
                android:theme="@style/Theme.Settings"
                android:focusable="false"
                android:clickable="false"
                android:text="@string/wifi_ap_do_not_show_again"
                style="@style/wifi_ap_dialog_checkbox_style" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
