<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@id/link_id"
            android:textColor="@color/sec_widget_tip_title_text_color"
            style="@style/wifi_item_label_for_labs" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@id/band_freq_name"
                android:text="Frequency : "
                style="@style/wifi_item_label_for_labs" />

            <TextView
                android:id="@id/band_freq_value"
                android:textAlignment="viewStart"
                style="@style/wifi_item_label_for_labs" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@id/channel_name"
                android:text="Channel : "
                style="@style/wifi_item_label_for_labs" />

            <TextView
                android:id="@id/channel_value"
                android:textAlignment="viewStart"
                style="@style/wifi_item_label_for_labs" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@id/rssi_name"
                android:text="Signal strength : "
                style="@style/wifi_item_label_for_labs" />

            <TextView
                android:id="@id/rssi_value"
                style="@style/wifi_item_label_for_labs" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@id/ap_bssid_name"
                android:text="BSSID : "
                style="@style/wifi_item_label_for_labs" />

            <TextView
                android:id="@id/ap_bssid_value"
                style="@style/wifi_item_label_for_labs" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@id/sta_mac_name"
                android:text="STA MAC address : "
                style="@style/wifi_item_label_for_labs" />

            <TextView
                android:id="@id/sta_mac_value"
                style="@style/wifi_item_label_for_labs" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
