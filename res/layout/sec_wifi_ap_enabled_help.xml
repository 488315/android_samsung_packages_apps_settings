<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:scrollbars="vertical">

    <ScrollView
        android:id="@id/wifi_ap_settings_vert"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/sec_widget_round_and_bgcolor"
                android:focusable="false"
                android:clickable="false">

                <TextView
                    android:id="@id/help_instruction_vert"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16.0sp"
                    android:ellipsize="marquee"
                    android:fadingEdge="horizontal"
                    android:singleLine="false"
                    android:lineSpacingExtra="4.0sp"
                    android:paddingStart="24.0dip"
                    android:paddingEnd="24.0dip"
                    style="@style/body_text_style" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@id/wifi_ap_settings_land"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal">

        <ScrollView
            android:id="@id/wifi_ap_settings_land_scroll"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:background="@color/sec_widget_round_and_bgcolor"
            android:fillViewport="true"
            android:layout_weight="4.0">

            <TextView
                android:id="@id/help_instruction_land"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16.0sp"
                android:ellipsize="marquee"
                android:fadingEdge="horizontal"
                android:singleLine="false"
                android:lineSpacingExtra="4.0sp"
                android:layout_marginStart="@dimen/sec_widget_body_text_padding_start_end"
                android:layout_marginEnd="@dimen/sec_widget_body_text_padding_start_end"
                style="@style/body_text_style" />

        </ScrollView>

    </LinearLayout>

</LinearLayout>
