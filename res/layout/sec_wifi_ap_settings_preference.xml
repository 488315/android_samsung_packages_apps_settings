<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/wifi_ap_pref"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:background="?android:activatedBackgroundIndicator"
    android:paddingTop="@dimen/wifi_ap_pref_paddingTop"
    android:paddingBottom="@dimen/wifi_ap_pref_paddingBottom"
    android:minHeight="@dimen/wifi_ap_list_item_min_height"
    android:paddingStart="0.0dip"
    android:paddingEnd="0.0dip">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@id/wifi_ap_settings_allowed_toggle"
            android:layout_width="40.0dip"
            android:layout_height="40.0dip"
            android:layout_gravity="center"
            android:focusable="false"
            android:clickable="false"
            android:scaleType="center"
            android:tint="@color/wifi_ap_tethering_icon_tint_color"
            android:layout_marginStart="24.0dip"
            android:layout_marginEnd="?android:scrollbarSize" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:focusable="false"
        android:clickable="false"
        android:layout_marginEnd="6.0dip">

        <TextView
            android:id="@android:id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18.0sp"
            android:textColor="?android:textColorPrimary"
            android:ellipsize="end"
            android:focusable="false"
            android:fadingEdge="horizontal"
            android:clickable="false"
            android:singleLine="true"
            android:layout_centerVertical="true"
            android:fontFamily="sec-roboto-light"
            android:layout_marginStart="14.0dip"
            android:layout_marginEnd="6.0dip" />

    </RelativeLayout>

</LinearLayout>
