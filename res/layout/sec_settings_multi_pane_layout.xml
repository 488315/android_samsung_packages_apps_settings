<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/setting_main_view"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    android:baselineAligned="false">

    <FrameLayout
        android:id="@id/primary_pane"
        android:layout_width="0.0dip"
        android:layout_height="fill_parent"
        android:descendantFocusability="blocksDescendants"
        android:layout_weight="@integer/sec_preferences_primary_pane_weight">

        <include
            layout="@layout/sec_settings_homepage_base_layout" />

    </FrameLayout>

    <FrameLayout
        android:id="@id/secondary_pane"
        android:layout_width="0.0dip"
        android:layout_height="fill_parent"
        android:background="@color/sec_widget_round_and_bgcolor"
        android:layout_weight="@integer/sec_preferences_secondary_pane_weight" />

</LinearLayout>
