<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/setupwizard_bottom_button_bar"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/sec_biometrics_common_suw_bottom_bar_next_button_area_height"
    android:gravity="bottom"
    android:background="@color/sec_biometrics_common_suw_background_content_color"
    android:paddingBottom="@dimen/sec_biometrics_common_suw_bottom_bar_next_button_paddingBottom"
    android:layout_alignParentBottom="true"
    android:paddingEnd="@dimen/sec_biometrics_common_suw_bottom_bar_next_button_paddingEnd">

    <Button
        android:id="@id/next_button"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/sec_biometrics_common_suw_continue_button_height"
        android:textSize="@dimen/sec_biometrics_guide_common_continue_button_text_size"
        android:textColor="@color/sec_biometrics_guide_common_continue_button_text_color"
        android:ellipsize="end"
        android:background="@drawable/sec_biometrics_guide_common_continue_button_background"
        android:focusable="true"
        android:minWidth="@dimen/sec_biometrics_common_suw_continue_button_min_width"
        android:text="@string/sec_biometrics_common_continue_button_text"
        android:maxLines="1"
        android:includeFontPadding="false"
        android:fontFamily="sec"
        android:paddingStart="@dimen/sec_biometrics_guide_common_continue_button_padding"
        android:paddingEnd="@dimen/sec_biometrics_guide_common_continue_button_padding"
        android:layout_alignParentEnd="true"
        android:textFontWeight="600" />

</RelativeLayout>
