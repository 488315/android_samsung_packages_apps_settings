<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:background="@color/sec_widget_round_and_bgcolor"
    android:minHeight="46.0dip">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center"
        android:paddingTop="12.0dip"
        android:paddingBottom="20.0dip"
        android:layout_weight="1.0"
        android:paddingStart="@dimen/sec_list_item_start_padding"
        android:paddingEnd="@dimen/sec_list_item_end_padding">

        <TextView
            android:id="@id/p2ptitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:minLines="1"
            android:textAlignment="viewStart"
            style="@style/sec_WifiDirectPreferenceMydeviceSummaryText" />

    </RelativeLayout>

</LinearLayout>
