<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/container"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollbarStyle="outsideOverlay"
    android:orientation="vertical"
    android:scrollbars="vertical"
    android:fillViewport="true"
    app:layout_behavior="@string/sesl_appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@id/regulatoryInfo"
            android:layout_width="71.0dip"
            android:layout_height="71.0dip"
            android:src="@drawable/sec_regulatory_info_kor"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:tint="@color/device_info_regulatory_info_kor_kc_logo_tint_color" />

        <TextView
            android:id="@id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15.0sp"
            android:textColor="?android:textColorPrimary"
            android:paddingTop="20.0dip"
            android:lineSpacingExtra="4.0sp"
            android:fontFamily="sec-roboto-regular"
            android:textAlignment="center"
            android:paddingHorizontal="24.0dip"
            android:textLocale="ko" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
