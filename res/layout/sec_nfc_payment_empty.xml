<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:focusable="true"
    android:contentDescription="@string/nfc_payment_no_apps">

    <LinearLayout
        android:id="@id/nfc_payment_vert"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_horizontal"
        android:focusable="false"
        android:visibility="gone"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:focusable="false">

            <LinearLayout
                android:id="@id/nfc_payment_vert_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:focusable="false">

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@id/nfc_payment_tap_image_vert"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/sec_widget_help_image_backgound_color"
                    android:focusable="false"
                    android:adjustViewBounds="true"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true" />

            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/sec_widget_round_and_bgcolor"
                android:paddingTop="@dimen/sec_payment_empty_top"
                android:focusable="false"
                android:text="@string/nfc_payment_no_apps"
                android:paddingStart="@dimen/sec_widget_body_text_padding_start_end"
                android:paddingEnd="@dimen/sec_widget_body_text_padding_start_end"
                style="@style/body_text_style" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@id/nfc_payment_land"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_horizontal"
        android:background="@color/sec_widget_round_and_bgcolor"
        android:focusable="false"
        android:visibility="gone"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:focusable="false">

            <LinearLayout
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:focusable="false"
                android:layout_weight="50.5">

                <LinearLayout
                    android:id="@id/nfc_payment_land_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:focusable="false">

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@id/nfc_payment_tap_image_land"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="@color/sec_widget_help_image_backgound_color"
                        android:focusable="false"
                        android:adjustViewBounds="true"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true" />

                </LinearLayout>

                <LinearLayout
                    android:id="@id/blackView"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    android:focusable="false"
                    android:foreground="@color/sec_widget_round_and_bgcolor" />

            </LinearLayout>

            <TextView
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:background="@color/sec_widget_round_and_bgcolor"
                android:paddingTop="@dimen/sec_payment_empty_top"
                android:focusable="false"
                android:text="@string/nfc_payment_no_apps"
                android:layout_weight="49.5"
                android:paddingStart="@dimen/sec_widget_body_text_padding_start_end"
                android:paddingEnd="@dimen/sec_widget_body_text_padding_start_end"
                style="@style/body_text_style" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
