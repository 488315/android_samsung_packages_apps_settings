<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/sec_widget_round_and_bgcolor">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/sec_wifi_action_menu_text"
        android:paddingTop="@dimen/sec_widget_preference_unclickable_first_margin_top"
        android:paddingBottom="@dimen/sec_widget_body_text_padding_bottom"
        android:text="@string/sec_wifi_development_btm_explanation"
        android:paddingStart="@dimen/sec_widget_body_text_padding_start_end"
        android:paddingEnd="@dimen/sec_widget_body_text_padding_start_end"
        style="@style/body_text_style" />

    <TextView
        android:id="@id/btm_no_issue"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:background="@color/sec_widget_round_and_bgcolor"
        android:visibility="gone"
        android:text="No issues"
        style="@style/no_item_text_style" />

    <TextView
        android:id="@id/btm_sub_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/sec_wifi_subtitle_text_color"
        android:text="@string/sec_wifi_development_btm_ap_list"
        style="?android:listSeparatorTextViewStyle" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@id/btm_recycler_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/ssw_wifi_emptyview_bg"
        android:layout_marginStart="@dimen/sec_wifi_setting_start_end_padding"
        android:layout_marginEnd="@dimen/sec_wifi_setting_start_end_padding" />

</LinearLayout>
