<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:enabled="false"
    android:orientation="vertical"
    android:background="@color/sec_widget_round_and_bgcolor"
    android:clickable="false"
    android:divider="@null"
    android:paddingStart="?android:listPreferredItemPaddingStart"
    android:paddingEnd="?android:listPreferredItemPaddingEnd">

    <TextView
        android:id="@android:id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="10"
        android:layout_weight="0.0"
        android:textAlignment="viewStart"
        style="@style/BluetoothPreferenceVisibilitySummaryText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0.0dip"
        android:textColor="@color/sec_no_item_text_color"
        android:ellipsize="none"
        android:gravity="center"
        android:layout_gravity="center"
        android:clickable="false"
        android:text="@string/sec_bluetooth_scan_history_not_found"
        android:singleLine="false"
        android:layout_weight="1.0"
        style="@style/BluetoothNoItemText" />

</LinearLayout>
