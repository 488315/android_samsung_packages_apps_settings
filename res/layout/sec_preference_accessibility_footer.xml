<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="?roundedCornerColor"
    android:clipToPadding="false"
    android:minHeight="?android:listPreferredItemHeight"
    android:paddingStart="?android:listPreferredItemPaddingStart"
    android:paddingEnd="?android:listPreferredItemPaddingEnd">

    <LinearLayout
        android:id="@id/icon_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start|center|top"
        android:orientation="horizontal"
        android:paddingTop="16.0dip"
        android:paddingBottom="4.0dip"
        android:minWidth="56.0dip"
        android:paddingEnd="12.0dip">

        <ImageView
            android:id="@android:id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@android:id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="0.0dip"
            android:paddingEnd="0.0dip"
            style="@style/Accessibility.Widget.TextView.Description" />

        <com.android.settingslib.widget.LinkTextView
            android:id="@id/settingslib_learn_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="8.0dip"
            android:visibility="gone"
            android:clickable="true"
            android:text="@string/settingslib_learn_more_text"
            style="@style/TextAppearance.Footer.Title.SettingsLib" />

    </LinearLayout>

</LinearLayout>
