<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/volume_animated_media_icon"
    android:layout_width="@dimen/volume_icon_size"
    android:layout_height="@dimen/volume_icon_size"
    android:layout_gravity="center"
    android:visibility="visible"
    android:layoutDirection="ltr">

    <FrameLayout
        android:id="@id/volume_splash_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:rotation="45.0">

        <ImageView
            android:id="@id/volume_icon_mute_splash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/tw_ic_audio_mute_splash" />

    </FrameLayout>

    <ImageView
        android:id="@id/volume_media_icon_mute"
        android:layout_width="28.0dip"
        android:layout_height="28.0dip"
        android:layout_gravity="center"
        android:src="@drawable/tw_ic_audio_media_mute_mtrl"
        android:tint="@color/sec_volume_icon_no_sound_color" />

    <ImageView
        android:id="@id/volume_media_icon_note"
        android:layout_width="14.0dip"
        android:layout_height="fill_parent"
        android:src="@drawable/tw_ic_audio_media_note"
        android:tint="@color/sec_volume_icon_color" />

    <ImageView
        android:id="@id/volume_media_icon_wave_s"
        android:layout_width="4.0dip"
        android:layout_height="fill_parent"
        android:src="@drawable/tw_ic_audio_media_wave_s"
        android:tint="@color/sec_volume_icon_color"
        android:alpha="0.5" />

    <ImageView
        android:id="@id/volume_media_icon_wave_l"
        android:layout_width="5.0dip"
        android:layout_height="fill_parent"
        android:src="@drawable/tw_ic_audio_media_wave_l"
        android:tint="@color/sec_volume_icon_color"
        android:alpha="0.5" />

</FrameLayout>
