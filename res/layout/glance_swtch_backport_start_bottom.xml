<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/glanceView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_gravity="start|bottom|center"
    android:orientation="horizontal"
    android:tag="glanceCompoundButton"
    android:layoutDirection="locale"
    app:glance_isTopLevelLayout="true"
    style="@style/Glance.AppWidget.SwitchBackport">

    <ViewStub
        android:id="@id/switchText"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout="@layout/glance_switch_text"
        android:layout_weight="1.0" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Glance.AppWidget.SwitchBackport">

        <ViewStub
            android:id="@id/switchTrack"
            android:layout_width="42.0dip"
            android:layout_height="28.0dip"
            android:layout="@layout/glance_switch_track" />

        <ViewStub
            android:id="@id/switchThumb"
            android:layout_width="42.0dip"
            android:layout_height="28.0dip"
            android:layout="@layout/glance_switch_thumb" />

    </FrameLayout>

</LinearLayout>
