<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/screen_timeout_scrollview"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:scrollbarStyle="outsideOverlay"
    android:orientation="vertical"
    android:scrollbars="vertical"
    android:fillViewport="true"
    android:overScrollMode="always"
    app:layout_behavior="@string/sesl_appbar_scrolling_view_behavior">

    <LinearLayout
        android:id="@id/screen_timeout_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@id/screen_timeout_list"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="0.0dip" />

        <LinearLayout
            android:id="@id/black_view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:foreground="@color/sec_widget_round_and_bgcolor" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
