<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/device_name_scrollview"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@id/device_name_summary"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/sec_widget_alert_dialog_padding_top"
            android:text="@string/device_name_popup_msg"
            android:layout_marginStart="@dimen/sec_widget_alert_dialog_padding_start_end"
            android:layout_marginEnd="@dimen/sec_widget_alert_dialog_padding_start_end"
            style="@style/dialog_body_text_style" />

        <EditText
            android:id="@id/device_name_edit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/device_name_input_field_top_margin_with_error_text"
            android:lines="1"
            android:singleLine="true"
            android:inputType="textCapSentences"
            android:privateImeOptions="disableEmoticonInput=true"
            android:layout_marginStart="@dimen/device_name_edit_dialog_margin_start"
            android:layout_marginEnd="@dimen/sec_widget_alert_dialog_padding_start_end" />

        <TextView
            android:id="@id/error_textview"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/device_name_edit_dialog_hint_text_size"
            android:textColor="@color/device_info_dialog_error"
            android:text="@string/max_char_reached"
            android:layout_marginStart="@dimen/sec_widget_alert_dialog_padding_start_end"
            android:layout_marginEnd="@dimen/sec_widget_alert_dialog_padding_start_end" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/sec_widget_alert_dialog_padding_bottom" />

    </LinearLayout>

</ScrollView>
