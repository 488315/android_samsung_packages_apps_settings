<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/bluetooth_dialog_title_view_padding"
    android:paddingTop="@dimen/bluetooth_dialog_title_view_padding"
    android:paddingRight="@dimen/bluetooth_dialog_title_view_padding">

    <TextView
        android:id="@id/title_header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/BluetoothScanDialogTitleStyle"
        android:text="@string/bluetooth_settings"
        android:layout_weight="1.0" />

    <ProgressBar
        android:id="@id/progress"
        android:layout_width="@dimen/bluetooth_dialog_progressbar_size"
        android:layout_height="@dimen/bluetooth_dialog_progressbar_size"
        android:gravity="right"
        android:layout_gravity="center"
        android:layout_weight="0.0"
        style="?android:progressBarStyleSmall" />

</LinearLayout>
