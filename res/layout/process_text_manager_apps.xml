<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center">

    <LinearLayout
        android:id="@id/manage_apps_bottom_sheet"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="@drawable/manage_apps_background_radius"
        app:behavior_hideable="true"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="12.0dip"
            android:src="@drawable/manage_apps_dialog_knob" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16.0sp"
                    android:textColor="@color/manage_apps_title_color"
                    android:paddingTop="10.0dip"
                    android:text="@string/process_text_manager_apps_title"
                    android:fontFamily="sec"
                    android:paddingStart="25.0dip"
                    android:paddingEnd="25.0dip"
                    android:layout_alignParentStart="true"
                    android:textFontWeight="600" />

                <Button
                    android:id="@id/process_text_done_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15.0sp"
                    android:textColor="@color/manage_apps_title_color"
                    android:background="@drawable/process_text_done_button_background"
                    android:text="@string/process_text_manager_apps_done"
                    android:fontFamily="sec"
                    android:paddingStart="16.0dip"
                    android:paddingEnd="16.0dip"
                    android:layout_alignParentEnd="true"
                    android:textFontWeight="600"
                    style="?android:textViewStyle" />

            </RelativeLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="15.0sp"
                android:textColor="@color/manage_apps_body_color"
                android:paddingTop="12.0dip"
                android:text="@string/process_text_manager_apps_summary"
                android:fontFamily="sec"
                android:paddingStart="25.0dip"
                android:paddingEnd="25.0dip"
                android:textFontWeight="400" />

        </LinearLayout>

        <FrameLayout
            android:id="@id/pref_container"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingTop="8.0dip"
            android:paddingStart="3.0dip"
            android:paddingEnd="11.0dip" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
