<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:paddingTop="7.0dip"
    android:paddingBottom="7.0dip"
    android:focusable="true"
    android:paddingStart="24.0dip"
    android:paddingEnd="24.0dip">

    <FrameLayout
        android:id="@id/icon_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <com.android.internal.widget.PreferenceImageView
            android:id="@android:id/icon"
            android:layout_width="40.0dip"
            android:layout_height="40.0dip"
            android:layout_marginEnd="15.0dip"
            app:maxHeight="40.0dip"
            app:maxWidth="40.0dip" />

    </FrameLayout>

    <LinearLayout
        android:id="@id/text_container"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_weight="1.0">

        <TextView
            android:id="@android:id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:textAppearanceLarge"
            android:textSize="18.0sp"
            android:textColor="?android:textColorPrimary"
            android:ellipsize="marquee"
            android:fadingEdge="horizontal"
            android:singleLine="true" />

        <ProgressBar
            android:id="@id/progress_bar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:indeterminateTint="@color/red"
            style="?android:progressBarStyleHorizontal" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@id/summary_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:focusable="true"
                android:visibility="gone"
                android:clickable="true" />

            <TextView
                android:id="@android:id/summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="?android:textColorSecondary"
                android:maxLines="4" />

            <View
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0" />

            <TextView
                android:id="@id/summary2_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="?android:textColorSecondary"
                android:visibility="gone"
                android:maxLines="4" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@android:id/widget_frame"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:visibility="gone" />

    <ImageView
        android:id="@id/icon_secondary_alert_icon"
        android:layout_width="40.0dip"
        android:layout_height="40.0dip"
        android:gravity="center_vertical"
        android:background="@drawable/sec_ic_wifi_ap_round_ripple_background"
        android:focusable="true"
        android:visibility="gone"
        android:clickable="true"
        android:scaleType="center"
        android:layout_marginStart="7.0dip"
        app:maxHeight="40.0dip"
        app:maxWidth="40.0dip" />

    <View
        android:id="@id/divider"
        android:layout_width="1.0dip"
        android:layout_height="22.0dip"
        android:layout_gravity="center_vertical"
        android:background="@color/wifi_ap_secondary_text_color"
        android:visibility="gone"
        android:layout_marginStart="7.0dip" />

    <ImageView
        android:id="@id/icon_secondary"
        android:layout_width="40.0dip"
        android:layout_height="40.0dip"
        android:gravity="center_vertical"
        android:background="@drawable/sec_ic_wifi_ap_round_ripple_background"
        android:focusable="true"
        android:visibility="gone"
        android:clickable="true"
        android:scaleType="center"
        android:layout_marginStart="7.0dip"
        app:maxHeight="40.0dip"
        app:maxWidth="40.0dip" />

    <Button
        android:id="@id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ff010101"
        android:layout_gravity="center"
        android:background="@drawable/sec_wifi_ap_round_button_background"
        android:visibility="gone"
        android:layout_marginStart="7.0dip" />

</LinearLayout>
