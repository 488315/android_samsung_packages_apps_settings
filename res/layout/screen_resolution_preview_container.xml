<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/sec_widget_help_image_backgound_color"
    android:descendantFocusability="afterDescendants">

    <LinearLayout
        android:id="@id/screen_resolution_image_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@id/screen_resolution_desc_text_container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20.0dip"
            android:layout_marginTop="24.0dip"
            android:layout_marginRight="20.0dip">

            <TextView
                android:id="@id/hd_description"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_weight="1.0"
                style="@style/screen_resolution_preview_text_style" />

            <TextView
                android:id="@id/fhd_description"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_weight="1.0"
                style="@style/screen_resolution_preview_text_style" />

            <TextView
                android:id="@id/wqhd_description"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_weight="1.0"
                style="@style/screen_resolution_preview_text_style" />

        </LinearLayout>

        <LinearLayout
            android:id="@id/screen_resolution_desc_image_container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/sec_widget_img_margin"
            android:layout_marginRight="@dimen/sec_widget_img_margin"
            android:layout_marginBottom="@dimen/sec_widget_img_margin">

            <ImageView
                android:id="@id/screen_resolution_desc_image"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:src="@drawable/screen_resolution_preview"
                android:scaleType="fitXY"
                android:adjustViewBounds="true" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@id/screen_resolution_desc_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/sec_widget_round_and_bgcolor">

        <TextView
            android:id="@id/screen_resolution_desc"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sec_widget_preference_unclickable_margin_top"
            android:text="@string/screen_resolution_desc_summary"
            android:layout_marginHorizontal="@dimen/sec_widget_body_text_padding_start_end"
            style="@style/description_text" />

    </LinearLayout>

</LinearLayout>
