<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:gravity="center_vertical">

    <View
        android:layout_width="@dimen/app_picker_list_actionbutton_divider_width"
        android:layout_height="@dimen/app_picker_list_actionbutton_divider_height"
        android:gravity="start"
        android:background="?listDividerColor" />

    <ImageButton
        android:id="@id/image_button"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:src="@drawable/ic_applist_setting_mtrl"
        style="?android:actionModeCloseButtonStyle" />

</LinearLayout>
