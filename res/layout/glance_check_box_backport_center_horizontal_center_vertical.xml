<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/glanceView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:layout_gravity="center"
    android:orientation="horizontal"
    android:tag="glanceCompoundButton"
    android:layoutDirection="locale"
    app:glance_isTopLevelLayout="true"
    style="@style/Glance.AppWidget.CheckBoxBackport">

    <ViewStub
        android:id="@id/checkBoxIcon"
        android:layout_width="32.0dip"
        android:layout_height="32.0dip"
        android:layout="@layout/glance_check_box_image" />

    <ViewStub
        android:id="@id/checkBoxText"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout="@layout/glance_check_box_text"
        android:layout_weight="1.0"
        android:textDirection="locale"
        style="@style/Glance.AppWidget.CheckBoxText" />

</LinearLayout>
