<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/sec_widget_help_image_backgound_color"
    android:focusable="false"
    android:clickable="false"
    android:descendantFocusability="afterDescendants">

    <LinearLayout
        android:id="@id/help_animation_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:focusable="false">

        <ImageView
            android:id="@id/preview_image"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/noti_illust_intelligence"
            android:scaleType="fitXY"
            android:adjustViewBounds="true" />

    </LinearLayout>

    <LinearLayout
        android:id="@id/description_text_container"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:background="@color/sec_widget_round_and_bgcolor">

        <TextView
            android:id="@id/help_description_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16.0dip"
            android:focusable="true"
            android:layout_marginHorizontal="@dimen/sec_intelligence_service_settings_about_advanced_intelligence_padding"
            style="@style/description_text" />

        <TextView
            android:id="@id/linked_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginHorizontal="@dimen/sec_intelligence_service_settings_about_advanced_intelligence_padding"
            style="@style/description_text" />

    </LinearLayout>

</LinearLayout>
