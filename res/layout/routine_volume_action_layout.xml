<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingTop="@dimen/volume_control_item_layout_margin_top"
    android:clickable="false"
    android:minHeight="?android:listPreferredItemHeightSmall">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:orientation="vertical"
        android:layout_weight="1.0">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@id/sound_mode_container"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <LinearLayout
                android:id="@id/volume_row_container"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@id/volume_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13.0sp"
                    android:textColor="@color/sec_sound_routines_volume_color"
                    android:gravity="end|center"
                    android:paddingTop="13.0dip"
                    android:visibility="gone"
                    android:minHeight="35.0dip"
                    android:text="@string/sec_volume_title"
                    android:fontFamily="sec"
                    android:layout_marginHorizontal="24.0dip"
                    android:textFontWeight="600" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <include
        android:id="@id/done_cancel_root"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="20.0dip"
        android:layout_marginStart="24.0dip"
        android:layout_marginEnd="24.0dip"
        layout="@layout/routine_done_cancel_two_button_layout" />

</LinearLayout>
