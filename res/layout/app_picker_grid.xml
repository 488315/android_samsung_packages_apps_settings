<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/item"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/grid_background">

    <ImageView
        android:id="@id/icon"
        android:layout_width="56.0dip"
        android:layout_height="56.0dip"
        android:focusable="false"
        android:clickable="false"
        android:layout_marginTop="8.0dip"
        android:layout_marginBottom="8.0dip"
        android:scaleType="fitXY"
        android:layout_centerHorizontal="true"
        android:importantForAccessibility="no" />

    <TextView
        android:id="@id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/app_picker_grid_icon_title_size"
        android:textColor="?android:textColorPrimary"
        android:ellipsize="end"
        android:paddingLeft="1.0dip"
        android:paddingRight="1.0dip"
        android:maxLines="2"
        android:layout_below="@id/icon"
        android:layout_centerHorizontal="true"
        android:importantForAccessibility="no"
        android:textAlignment="center" />

    <CheckBox
        android:id="@id/check_widget"
        android:layout_width="32.0dip"
        android:layout_height="32.0dip"
        android:background="@drawable/btn_check_material_background"
        android:button="@drawable/btn_check_material_anim"
        android:layout_marginStart="2.0dip"
        android:buttonTint="@color/grid_check_button_tint_selector" />

</RelativeLayout>
