<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/recycle_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal"
    android:background="@drawable/sec_wifi_development_roundrect"
    android:paddingTop="2.0dip"
    android:paddingBottom="2.0dip"
    android:clickable="true"
    android:layout_marginTop="6.0dip"
    android:layout_marginBottom="6.0dip"
    android:paddingStart="16.0dip"
    android:paddingEnd="8.0dip"
    android:layout_marginStart="0.0dip"
    android:layout_marginEnd="0.0dip">

    <TextView
        android:id="@id/recycle_ssid"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:textSize="16.0sp"
        android:textColor="?android:textColorPrimary"
        android:gravity="start|center"
        android:paddingTop="10.0dip"
        android:paddingBottom="10.0dip"
        android:layout_weight="1.0" />

    <TextView
        android:id="@id/recycle_count_bssid"
        android:layout_width="32.0dip"
        android:layout_height="wrap_content"
        android:textSize="16.0sp"
        android:textColor="?android:textColorPrimary"
        android:gravity="center"
        android:paddingTop="4.0dip"
        android:paddingBottom="4.0dip" />

    <TextView
        android:id="@id/recycle_best_rssi"
        android:layout_width="52.0dip"
        android:layout_height="wrap_content"
        android:textSize="16.0sp"
        android:textColor="?android:textColorPrimary"
        android:gravity="center"
        android:paddingTop="4.0dip"
        android:paddingBottom="4.0dip" />

    <LinearLayout
        android:layout_width="52.0dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:paddingStart="8.0dip"
        android:paddingEnd="8.0dip">

        <TextView
            android:id="@id/recycle_band2"
            android:layout_width="fill_parent"
            android:layout_height="14.0dip"
            android:textSize="12.0sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@drawable/sec_wifi_development_roundrect_small"
            android:layout_marginTop="1.0dip"
            android:layout_marginBottom="1.0dip"
            android:text="2.4G"
            android:maxLines="1"
            android:backgroundTint="#ff6bdac2"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="6.0sp" />

        <TextView
            android:id="@id/recycle_band5"
            android:layout_width="fill_parent"
            android:layout_height="14.0dip"
            android:textSize="12.0sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@drawable/sec_wifi_development_roundrect_small"
            android:layout_marginTop="1.0dip"
            android:layout_marginBottom="1.0dip"
            android:text="5G"
            android:maxLines="1"
            android:backgroundTint="#ff40a1f6"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="6.0sp" />

        <TextView
            android:id="@id/recycle_band6"
            android:layout_width="fill_parent"
            android:layout_height="14.0dip"
            android:textSize="12.0sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@drawable/sec_wifi_development_roundrect_small"
            android:layout_marginTop="1.0dip"
            android:layout_marginBottom="1.0dip"
            android:text="6G"
            android:maxLines="1"
            android:backgroundTint="#ffc987ff"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="6.0sp" />

    </LinearLayout>

</LinearLayout>
