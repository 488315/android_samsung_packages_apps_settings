<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollbarStyle="outsideOverlay"
    android:gravity="top"
    android:textDirection="locale">

    <LinearLayout
        android:divider="@null"
        android:accessibilityDataSensitive="yes"
        style="@style/AccessibilityDialog">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingLeft="24.0dip"
            android:paddingRight="24.0dip">

            <TextView
                android:id="@id/permissionDialog_description"
                android:text="@string/sec_accessibility_service_warning_description"
                style="@style/SecAccessibilityDialogDescription" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24.0dip">

                <ImageView
                    android:id="@id/controlScreen_icon"
                    android:src="@drawable/a11y_enable_warning_popup_item_icon"
                    style="@style/SecAccessibilityDialogIcon" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@id/controlScreen_title"
                        android:text="@string/accessibility_service_screen_control_title"
                        style="@style/SecAccessibilityDialogPermissionTitle" />

                    <TextView
                        android:id="@id/controlScreen_description"
                        android:text="@string/sec_accessibility_service_screen_control_description"
                        style="@style/SecAccessibilityDialogPermissionDescription" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24.0dip">

                <ImageView
                    android:id="@id/performAction_icon"
                    android:src="@drawable/a11y_enable_warning_popup_item_icon"
                    style="@style/SecAccessibilityDialogIcon" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@id/performAction_title"
                        android:text="@string/accessibility_service_action_perform_title"
                        style="@style/SecAccessibilityDialogPermissionTitle" />

                    <TextView
                        android:id="@id/performAction_description"
                        android:text="@string/sec_accessibility_service_action_perform_description"
                        style="@style/SecAccessibilityDialogPermissionDescription" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
