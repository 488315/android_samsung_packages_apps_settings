<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="?android:listPreferredItemPaddingStart"
    android:paddingEnd="?android:listPreferredItemPaddingEnd">

    <TextView
        android:id="@id/chart_notification_no_available_log"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/sec_widget_round_and_bgcolor"
        android:paddingTop="10.0dip"
        android:text="No available log"
        android:textAlignment="center" />

    <Spinner
        android:id="@id/chart_spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <com.samsung.android.settings.wifi.develop.history.view.HistoryView
        android:id="@id/chart_history_view"
        android:layout_width="fill_parent"
        android:layout_height="200.0dip"
        android:colorAccent="?android:colorAccent"
        settings:textColor="?android:textColorSecondary" />

</LinearLayout>
