<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    android:background="@color/sec_widget_round_and_bgcolor"
    android:focusable="false"
    android:clickable="false"
    android:descendantFocusability="afterDescendants">

    <LinearLayout
        android:id="@id/add_preference"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:focusable="true"
        android:clickable="true"
        android:minWidth="@dimen/sec_widget_button_preference_min_width"
        style="@style/ColorRoundButtonStyle">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add_24dp"
            android:tint="@color/sec_widget_color_round_button_text_color"
            android:paddingEnd="12.0dip" />

        <TextView
            android:id="@id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sec_widget_round_button_text_size"
            android:textStyle="bold"
            android:textColor="@color/sec_widget_color_round_button_text_color"
            android:text="@string/zen_mode_add_time_rule"
            android:fontFamily="sec-roboto-light" />

    </LinearLayout>

</LinearLayout>
