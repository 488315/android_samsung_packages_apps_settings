<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@id/active_key_image_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <ImageView
                android:id="@id/active_key_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/sec_widget_help_image_backgound_color"
                android:layout_margin="@dimen/sec_widget_img_margin"
                android:src="@drawable/sec_setting_activekey_image"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:maxWidth="@dimen/sec_widget_img_max_width"
                android:contentDescription="@null" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0" />

    </LinearLayout>

    <LinearLayout
        android:id="@id/active_key_desc"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/sec_widget_round_and_bgcolor"
        android:paddingTop="@dimen/sec_widget_preference_unclickable_margin_bottom"
        android:layout_below="@id/active_key_image_container">

        <TextView
            android:id="@id/active_key_main_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/active_key_summary"
            android:singleLine="false"
            android:paddingStart="@dimen/sec_widget_body_text_padding_start_end"
            android:paddingEnd="@dimen/sec_widget_body_text_padding_start_end"
            style="@style/description_text" />

    </LinearLayout>

</RelativeLayout>
