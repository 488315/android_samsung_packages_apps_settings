<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:background="?listChoiceBackgroundIndicator"
    android:minHeight="?listPreferredItemHeightSmall"
    android:paddingStart="?android:listPreferredItemPaddingStart"
    android:paddingEnd="?android:listPreferredItemPaddingEnd">

    <FrameLayout
        android:id="@id/icon_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start|center"
        android:paddingEnd="@dimen/sec_mde_preference_image_padding">

        <ImageView
            android:id="@android:id/icon"
            android:layout_width="@dimen/sec_mde_preference_image_size"
            android:layout_height="@dimen/sec_mde_preference_image_size"
            android:layout_gravity="center" />

    </FrameLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/sec_suggestion_container_margin_top"
        android:paddingBottom="@dimen/sec_suggestion_container_margin_bottom">

        <TextView
            android:id="@android:id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?textAppearanceListItem"
            android:ellipsize="end"
            android:maxLines="5"
            android:fontFamily="sec"
            android:textAlignment="viewStart"
            android:textFontWeight="600" />

        <TextView
            android:id="@android:id/summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:textAppearanceSmall"
            android:maxLines="10"
            android:layout_below="@android:id/title"
            android:textAlignment="viewStart"
            android:layout_alignStart="@android:id/title" />

    </RelativeLayout>

</LinearLayout>
