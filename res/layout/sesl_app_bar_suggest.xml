<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/transparent"
    android:layout_marginHorizontal="@dimen/sesl_appbar_extended_title_padding">

    <ImageButton
        android:id="@id/suggest_app_bar_close"
        android:layout_width="@dimen/sesl_appbar_suggest_close_button_size"
        android:layout_height="@dimen/sesl_appbar_suggest_close_button_size"
        android:layout_gravity="end"
        android:visibility="gone"
        android:layout_marginBottom="@dimen/sesl_appbar_suggest_close_button_vertical"
        android:layout_above="@id/suggest_app_bar_center_layout"
        android:layout_alignParentRight="true" />

    <include
        layout="@layout/sesl_app_bar_suggest_center_layout" />

</RelativeLayout>
