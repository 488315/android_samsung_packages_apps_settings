<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="?android:selectableItemBackground"
    android:minHeight="?android:listPreferredItemHeightSmall"
    android:paddingEnd="?android:dialogPreferredPadding">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="24.0dip">

        <TextView
            android:id="@id/network_request_title_text"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:textSize="20.0sp"
            android:gravity="center_vertical"
            android:paddingTop="18.0dip"
            android:layout_weight="1.0"
            style="@style/info_label" />

        <ProgressBar
            android:id="@id/network_request_title_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingTop="20.0dip"
            android:minWidth="32.0dip"
            android:text="@string/progress_scanning"
            android:layout_marginStart="16.0dip"
            style="?android:progressBarStyleSmallTitle" />

    </LinearLayout>

    <TextView
        android:id="@id/network_request_summary_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="16.0sp"
        android:paddingTop="18.0dip"
        android:paddingStart="24.0dip" />

</LinearLayout>
