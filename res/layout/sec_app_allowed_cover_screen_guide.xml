<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/sec_widget_help_image_backgound_color"
    android:focusable="true"
    android:importantForAccessibility="yes">

    <FrameLayout
        android:id="@id/preview_image_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:focusable="false">

        <ImageView
            android:id="@id/preview_image"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/sec_help_app_allowed_cover_screen"
            android:scaleType="fitXY"
            android:adjustViewBounds="true" />

    </FrameLayout>

    <LinearLayout
        android:id="@id/description_text_container"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:background="@color/sec_widget_round_and_bgcolor"
        android:focusable="true">

        <TextView
            android:id="@id/help_description_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sec_widget_preference_unclickable_margin_top"
            android:text="@string/sec_labs_cover_screen_apps_allowed_on_cover_screen_description"
            android:layout_marginStart="@dimen/sec_widget_body_text_padding_start_end"
            android:layout_marginEnd="@dimen/sec_widget_body_text_padding_start_end"
            style="@style/description_text" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="@dimen/sec_widget_preference_unclickable_margin_top" />

    </LinearLayout>

</LinearLayout>
