<?xml version="1.0" encoding="utf-8"?>
<ripple
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/sec_widget_ripple_color">

    <item
        android:id="@android:id/mask">

        <shape
            android:shape="rectangle">

            <solid
                android:color="@color/white" />

            <corners
                android:radius="@dimen/sec_widget_round_button_bg_radius" />

            <padding
                android:left="@dimen/sec_widget_round_button_padding_start_end"
                android:top="@dimen/sec_widget_round_button_padding_top_bottom"
                android:right="@dimen/sec_widget_round_button_padding_start_end"
                android:bottom="@dimen/sec_widget_round_button_padding_top_bottom" />

        </shape>

    </item>

    <item
        android:id="@id/rec_shape">

        <shape
            android:tint="@color/sec_widget_color_round_button_bg_color"
            android:shape="rectangle">

            <solid
                android:color="@color/white" />

            <corners
                android:radius="@dimen/sec_widget_round_button_bg_radius" />

            <padding
                android:left="@dimen/sec_widget_round_button_padding_start_end"
                android:top="@dimen/sec_widget_round_button_padding_top_bottom"
                android:right="@dimen/sec_widget_round_button_padding_start_end"
                android:bottom="@dimen/sec_widget_round_button_padding_top_bottom" />

        </shape>

    </item>

</ripple>
