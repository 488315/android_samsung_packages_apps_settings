<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <color android:color="@color/sec_bluetooth_list_background_color2" />
    </item>
    <item android:state_enabled="true" android:state_selected="true">
        <color android:color="@color/sec_widget_ripple_color" />
    </item>
    <item android:state_focused="false" android:state_enabled="true" android:state_pressed="true">
        <color android:color="@color/sec_widget_ripple_color" />
    </item>
    <item android:state_focused="true" android:state_enabled="true" android:state_pressed="false">
        <color android:color="@color/sec_widget_ripple_color" />
    </item>
    <item android:state_enabled="true">
        <color android:color="@color/sec_bluetooth_list_background_color2" />
    </item>
</selector>
