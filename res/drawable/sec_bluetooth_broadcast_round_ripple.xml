<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/sec_widget_ripple_color" />
            <corners android:radius="@dimen/sec_bluetooth_assistant_connected_card_radius" />
            <stroke android:width="0.0dip" android:color="@color/sec_widget_ripple_color" />
        </shape>
    </item>
    <item android:state_focused="true" android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/sec_widget_ripple_color" />
            <corners android:radius="@dimen/sec_bluetooth_assistant_connected_card_radius" />
            <stroke android:width="0.0dip" />
        </shape>
    </item>
    <item android:drawable="@drawable/sec_bluetooth_broadcast_round" />
</selector>
