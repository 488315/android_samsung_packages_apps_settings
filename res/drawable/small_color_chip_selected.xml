<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item>

        <shape
            android:shape="oval">

            <solid
                android:color="@color/color_chip_shadow" />

            <padding
                android:bottom="@dimen/small_chip_bottom_padding" />

            <corners
                android:radius="@dimen/chip_shape_radius" />

        </shape>

    </item>

    <item>

        <shape
            android:shape="oval">

            <stroke
                android:width="@dimen/small_chip_stroke_focus_width"
                android:color="@color/color_chip_stroke_focused" />

            <solid
                android:color="@color/color_chip_selected" />

            <size
                android:height="@dimen/small_chip_height_inner"
                android:width="@dimen/small_chip_width_inner" />

        </shape>

    </item>

</layer-list>
