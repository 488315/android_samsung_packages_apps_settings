<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/color_chip_shadow" />
            <padding android:bottom="@dimen/chip_mtr_bottom_padding" />
            <corners android:radius="@dimen/chip_shape_radius" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <stroke android:width="@dimen/chip_mtr_stroke_inner_width" android:color="@color/color_chip_stroke" />
            <solid android:color="@color/color_chip_blank" />
            <size android:height="@dimen/small_chip_height_inner" android:width="@dimen/small_chip_height_inner" />
        </shape>
    </item>
</layer-list>
