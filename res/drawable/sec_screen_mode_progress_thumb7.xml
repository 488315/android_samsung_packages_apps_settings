<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:gravity="center">

        <shape
            android:shape="oval">

            <solid
                android:color="@color/sec_screen_mode_seekbar_thumb_drawable_solid_color" />

            <stroke
