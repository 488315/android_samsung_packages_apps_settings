    <PreferenceCategory android:title="@string/view_clear_category_title" android:key="view_clear_category">
        <Preference android:title="@string/high_contrast_theme_title" android:key="high_contrast_theme_preference" android:fragment="com.samsung.android.settings.accessibility.vision.HighContrastThemePreferenceFragment" settings:controller="com.samsung.android.settings.accessibility.vision.controllers.HighContrastThemePreferenceController" settings:keywords="@string/keyword_highcontrast_theme" />
        <SecSwitchPreferenceScreen android:title="@string/high_contrast_font_title" android:key="toggle_high_text_contrast_preference" android:fragment="com.samsung.android.settings.accessibility.vision.HighContrastFontFragment" settings:controller="com.samsung.android.settings.accessibility.vision.controllers.HighContrastFontPreferenceController" settings:keywords="@string/keywords_hightcontrast_font" />
        <SecSwitchPreferenceScreen android:title="@string/accessibility_toggle_high_keyboard_contrast_preference_title" android:key="high_keyboard_contrast_preference_screen" settings:controller="com.samsung.android.settings.accessibility.vision.controllers.HighContrastKeyboardPreferenceController" settings:keywords="@string/keywords_highcontrast_keyboard" />
        <SecSwitchPreferenceScreen android:title="@string/high_light_buttons_title" android:key="high_light_buttons_preference_screen" android:fragment="com.samsung.android.settings.accessibility.vision.HighLightButtonFragment" settings:controller="com.samsung.android.settings.accessibility.vision.controllers.HighLightButtonPreferenceController" />
        <SecSwitchPreferenceScreen android:persistent="false" android:title="@string/relumino_title" android:key="toggle_relumino_preference" android:fragment="com.samsung.android.settings.accessibility.vision.color.ReluminoFragment" settings:controller="com.samsung.android.settings.accessibility.vision.controllers.ReluminoPreferenceController" />
        <SecSwitchPreferenceScreen android:persistent="false" android:title="@string/accessibility_display_inversion_preference_title" android:key="toggle_inversion_preference" android:fragment="com.android.settings.accessibility.ToggleColorInversionPreferenceFragment" settings:controller="com.samsung.android.settings.accessibility.vision.controllers.ColorInversionPreferenceController" settings:keywords="@string/keyword_color_inversion" />
