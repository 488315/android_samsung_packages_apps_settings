<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen android:title="@string/vision_enhancements_title" settings:hierarchicalParentFragment="com.samsung.android.settings.accessibility.home.SecAccessibilitySettings" settings:topLevelPreferenceKey="top_level_accessibility"
