            <intent android:action="com.android.settings.ACCESSIBILITY_COLOR_SPACE_SETTINGS" />
        </Preference>
        <Preference android:title="@string/color_adjustment_title" android:key="color_adjustment_preference_screen" android:fragment="com.samsung.android.settings.accessibility.vision.color.ColorAdjustmentMainFragment" settings:controller="com.samsung.android.settings.accessibility.vision.controllers.ColorAdjustmentPreferenceController" settings:keywords="@string/keywords_color_adjustment">
            <intent android:action="com.samsung.accessibility.COLOR_ADJUSTMENT" />
        </Preference>
        <Preference android:title="@string/colour_lens_title" android:key="color_lens_preference_screen" android:fragment="com.samsung.android.settings.accessibility.vision.color.ColorLensFragment" settings:controller="com.samsung.android.settings.accessibility.vision.controllers.ColorLensPreferenceController" settings:keywords="@string/keyword_color_filter" />
        <SwitchPreference android:title="@string/accessibility_disable_animations" android:key="toggle_remove_animations" android:summary="@string/accessibility_toggle_remove_animations_summary" settings:controller="com.samsung.android.settings.accessibility.vision.controllers.RemoveAnimationPreferenceController" settings:keywords="@string/keywords_remove_animation" />
        <SwitchPreference android:title="@string/reduce_transparency_title" android:key="toggle_reduce_transparency" android:summary="@string/accessibility_toggle_reduce_transparency_summary" settings:controller="com.samsung.android.settings.accessibility.vision.controllers.ReduceTransparencyPreferenceController" />
