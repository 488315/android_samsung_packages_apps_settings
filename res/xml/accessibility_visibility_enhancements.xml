        <Preference android:title="@string/sec_font_size_and_style_title" android:key="sec_font_size_a11y" settings:controller="com.samsung.android.settings.display.controller.SecFontSizeAndStylePreferenceController" settings:keywords="@string/keywords_font_size_and_style">
