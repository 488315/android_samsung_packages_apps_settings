        <Preference android:persistent="false" android:title="@string/voice_label_title" android:key="voice_label_preference_screen" android:summary="@string/voice_label_summary" settings:controller="com.samsung.android.settings.accessibility.vision.controllers.VoiceLabelPreferenceController" settings:keywords="@string/keywords_voice_label" />
