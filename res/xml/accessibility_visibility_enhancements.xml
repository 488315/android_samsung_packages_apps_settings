    <PreferenceCategory android:title="@string/view_larger_category_title" android:key="view_larger_category">
        <Preference android:persistent="false" android:title="@string/accessibility_screen_magnification_title" android:key="magnification_preference_screen" android:fragment="com.samsung.android.settings.accessibility.vision.MagnificationPreferenceFragment" settings:controller="com.samsung.android.settings.accessibility.vision.controllers.MagnificationPreferenceController" />
        <Preference android:title="@string/accessibility_magnifier_title" android:key="magnifier_camera_preference" android:fragment="com.samsung.android.settings.accessibility.vision.MagnifierCameraFragment" settings:controller="com.samsung.android.settings.accessibility.vision.controllers.MagnifierCameraPreferenceController" settings:keywords="@string/keyword_magnifier" />
        <Preference android:title="@string/sec_cursor_thickness_title" android:key="cursor_thickness_preference" android:fragment="com.samsung.android.settings.display.SecCursorThicknessPreferenceFragment" settings:controller="com.samsung.android.settings.accessibility.vision.controllers.CursorThicknessPreferenceController" />
