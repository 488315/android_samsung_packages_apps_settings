<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res-auto"
    android:title="@string/device_info_battery_title"
    settings:hierarchicalParentFragment="com.samsung.android.settings.deviceinfo.aboutphone.SecMyDeviceInfoFragment"
    settings:topLevelPreferenceKey="top_level_about_phone">

    <Preference
        android:persistent="false"
        android:title="@string/battery_status_title"
        android:key="battery_status"
        android:summary="@string/summary_placeholder"
        settings:controller="com.samsung.android.settings.deviceinfo.batteryinfo.BatteryStatusPreferenceController"
        settings:keywords="@string/keywords_battery_status_title" />

    <Preference
        android:persistent="false"
        android:title="@string/battery_level_title"
        android:key="battery_level"
        android:summary="@string/summary_placeholder"
        settings:controller="com.samsung.android.settings.deviceinfo.batteryinfo.BatteryLevelPreferenceController"
        settings:keywords="@string/keywords_battery_level_title" />

    <Preference
        android:persistent="false"
        android:title="@string/battery_life_title"
        android:key="battery_life"
        android:summary="@string/summary_placeholder"
        settings:controller="com.samsung.android.settings.deviceinfo.batteryinfo.BatteryLifePreferenceController"
        settings:keywords="@string/keywords_battery_life_title" />

    <Preference
        android:title="@string/device_info_battery_capacity"
        android:key="battery_capacity"
        android:summary="@string/summary_placeholder"
        settings:controller="com.samsung.android.settings.deviceinfo.batteryinfo.BatteryInfoCapacityPreferenceController"
        settings:keywords="@string/keywords_device_info_battery_capacity" />

    <Preference
        android:title="@string/device_info_battery_health"
        android:key="battery_health_state"
        android:summary="@string/summary_placeholder"
        settings:controller="com.samsung.android.settings.deviceinfo.batteryinfo.BatteryHealthPreferenceController" />

    <Preference
        android:title="@string/device_info_battery_cycle_count"
        android:key="battery_cycle"
        android:summary="@string/summary_placeholder"
        settings:controller="com.samsung.android.settings.deviceinfo.batteryinfo.SecBatteryCycleCountPreferenceController" />

    <Preference
        android:title="@string/device_info_battery_manufacture_date"
        android:key="battery_manufacture_date"
        android:summary="@string/summary_placeholder"
        settings:controller="com.samsung.android.settings.deviceinfo.batteryinfo.SecBatteryManufactureDatePreferenceController" />

    <Preference
        android:title="@string/device_info_battery_first_used_date"
        android:key="battery_first_date"
        android:summary="@string/summary_placeholder"
        settings:controller="com.samsung.android.settings.deviceinfo.batteryinfo.SecBatteryFirstUseDatePreferenceController" />

    <com.samsung.android.settings.widget.SecUnclickablePreference
        android:selectable="false"
        android:key="battery_capacity_typical_desc"
        settings:controller="com.samsung.android.settings.deviceinfo.batteryinfo.BatteryInfoCapacityTypicalDescPreferenceController"
        style="@style/description_text" />

</PreferenceScreen>
