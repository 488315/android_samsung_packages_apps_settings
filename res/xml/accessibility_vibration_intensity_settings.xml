<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen android:title="@string/accessibility_vibration_settings_title"
  xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.android.settingslib.widget.MainSwitchPreference android:title="@string/accessibility_vibration_primary_switch_title" android:key="vibration_intensity_switch_main" app:controller="com.android.settings.accessibility.VibrationMainSwitchPreferenceController" app:keywords="@string/keywords_accessibility_vibration_primary_switch" />
    <PreferenceCategory android:title="@string/accessibility_call_vibration_category_title" android:key="vibration_intensity_category_call">
        <com.android.settings.widget.SeekBarPreference android:title="@string/accessibility_ring_vibration_title" android:key="vibration_intensity_preference_ring" app:controller="com.android.settings.accessibility.RingVibrationIntensityPreferenceController" app:keywords="@string/keywords_ring_vibration" />
        <SwitchPreferenceCompat android:title="@string/vibrate_when_ringing_option_ramping_ringer" android:key="vibration_intensity_preference_ramping_ringer" app:controller="com.android.settings.accessibility.VibrationRampingRingerTogglePreferenceController" app:keywords="@string/keywords_ramping_ringer_vibration" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/accessibility_notification_alarm_vibration_category_title" android:key="vibration_intensity_category_notification_alarm">
        <com.android.settings.widget.SeekBarPreference android:title="@string/accessibility_notification_vibration_title" android:key="vibration_intensity_preference_notification" app:controller="com.android.settings.accessibility.NotificationVibrationIntensityPreferenceController" app:keywords="@string/keywords_notification_vibration" />
        <com.android.settings.widget.SeekBarPreference android:title="@string/accessibility_alarm_vibration_title" android:key="vibration_intensity_preference_alarm" app:controller="com.android.settings.accessibility.AlarmVibrationIntensityPreferenceController" app:keywords="@string/keywords_alarm_vibration" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/accessibility_interactive_haptics_category_title" android:key="vibration_intensity_category_haptics">
        <com.android.settings.widget.SeekBarPreference android:title="@string/accessibility_touch_vibration_title" android:key="vibration_intensity_preference_touch" app:controller="com.android.settings.accessibility.HapticFeedbackIntensityPreferenceController" app:keywords="@string/keywords_touch_vibration" />
        <com.android.settings.widget.SeekBarPreference android:title="@string/accessibility_media_vibration_title" android:key="vibration_intensity_preference_media" app:controller="com.android.settings.accessibility.MediaVibrationIntensityPreferenceController" app:keywords="@string/keywords_media_vibration" />
        <SwitchPreferenceCompat android:title="@string/accessibility_keyboard_vibration_title" android:key="vibration_intensity_preference_keyboard" app:controller="com.android.settings.accessibility.KeyboardVibrationTogglePreferenceController" app:keywords="@string/keywords_keyboard_vibration" />
    </PreferenceCategory>
</PreferenceScreen>
