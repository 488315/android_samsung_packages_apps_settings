<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/sec_widget_round_and_bgcolor"
    android:paddingTop="@dimen/sec_biometrics_disclaimer_title_margin_top"
    android:paddingBottom="@dimen/sec_biometrics_lock_header_margin_bottom"
    android:weightSum="1.0"
    android:paddingHorizontal="@dimen/sec_biometrics_disclaimer_padding">

    <TextView
        android:id="@id/title_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sec_biometrics_lock_title_font_size"
        android:textColor="@color/sec_biometrics_common_security_notice_common_title_text_color"
        android:gravity="center"
        android:text="@string/sec_biometrics_set_secure_screen_lock"
        style="@style/SecBiometricsGuideCommonTitleStyle" />

    <TextView
        android:id="@id/description_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/sec_biometrics_choose_lock_header_description_color"
        android:gravity="start"
        android:layout_marginTop="@dimen/sec_biometrics_disclaimer_margin_top"
        style="@style/SecBiometricsGuideCommonDescTextStyle" />

</LinearLayout>
