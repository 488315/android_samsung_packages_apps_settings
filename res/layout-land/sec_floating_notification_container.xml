<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/sec_reset_settings_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    android:background="@color/sec_widget_round_and_bgcolor">

    <FrameLayout
        android:id="@id/floating_options_preference_container"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:background="@color/content_background"
        android:layout_weight="49.5" />

    <androidx.core.widget.NestedScrollView
        android:id="@id/floating_icon_preview_parent"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:background="@color/sec_widget_round_and_bgcolor"
        android:layout_weight="50.5">

        <LinearLayout
            android:id="@id/floating_icon_preview_container"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:background="@color/content_background"
            android:visibility="gone" />

    </androidx.core.widget.NestedScrollView>

</LinearLayout>
