<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    android:focusable="false"
    android:clickable="false"
    android:descendantFocusability="afterDescendants">

    <LinearLayout
        android:layout_width="0.0dip"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:background="@color/sec_widget_help_image_backgound_color"
        android:layout_weight="5.05">

        <LinearLayout
            android:id="@id/help_animation_container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@id/preview_image"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:src="@drawable/noti_illust_intelligence"
                android:scaleType="fitXY"
                android:adjustViewBounds="true" />

        </LinearLayout>

        <LinearLayout
            android:id="@id/blackView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:foreground="@color/sec_widget_round_and_bgcolor" />

    </LinearLayout>

    <LinearLayout
        android:id="@id/description_text_container"
        android:layout_width="0.0dip"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:background="@color/sec_widget_round_and_bgcolor"
        android:layout_weight="4.95">

        <TextView
            android:id="@id/help_description_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:layout_marginTop="@dimen/sec_widget_preference_unclickable_margin_top"
            android:layout_marginStart="@dimen/sec_widget_body_text_padding_start_end"
            android:layout_marginEnd="@dimen/sec_widget_body_text_padding_start_end"
            style="@style/description_text" />

        <TextView
            android:id="@id/linked_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginHorizontal="@dimen/sec_intelligence_service_settings_about_advanced_intelligence_padding"
            style="@style/description_text" />

    </LinearLayout>

</LinearLayout>
